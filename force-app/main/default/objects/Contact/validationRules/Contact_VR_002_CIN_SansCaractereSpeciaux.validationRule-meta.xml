<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Contact_VR_002_CIN_SansCaractereSpeciaux</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK(CIN__c)) &amp;&amp; NOT(REGEX( CIN__c,&quot;^[a-zA-Z0-9]*$&quot;))</errorConditionFormula>
    <errorDisplayField>CIN__c</errorDisplayField>
    <errorMessage>Merci de renseigner la CIN sans caractères spéciaux ni espaces.</errorMessage>
</ValidationRule>
